# 数据库配置方式一：使用DATABASE_URL（推荐，适用于腾讯云等云数据库）
# DATABASE_URL=mysql://username:password@host:port/database
# 示例：DATABASE_URL=mysql://root:your_password@your-host.sql.tencentcdb.com:port/database_name
DATABASE_URL=mysql://your_username:your_password@your_host:your_port/your_database

# 数据库配置方式二：分别配置（可选，如果不使用DATABASE_URL）
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=root
# DB_PASSWORD=your_password
# DB_NAME=your_database_name

# 阿里云OSS配置
OSS_REGION=oss-cn-beijing
OSS_ACCESS_KEY_ID=your_oss_access_key_id
OSS_ACCESS_KEY_SECRET=your_oss_access_key_secret
OSS_BUCKET=your_bucket_name

# JWT密钥
JWT_SECRET=your_jwt_secret_key

# 服务端口
PORT=3000

# Node环境
NODE_ENV=production
